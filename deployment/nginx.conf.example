# ==============================================================================
# Configuração do Nginx - Secretaria Online
# ==============================================================================
#
# Este é um arquivo de exemplo de configuração do Nginx para a aplicação
# Secretaria Online. O script deploy-app.sh pode criar este arquivo
# automaticamente, mas você pode editá-lo manualmente se necessário.
#
# Localização: /etc/nginx/sites-available/secretaria-online
# Symlink: /etc/nginx/sites-enabled/secretaria-online
#
# ==============================================================================

# Configuração HTTP (porta 80)
# Se SSL estiver habilitado, esta seção será modificada pelo Certbot
server {
    listen 80;
    listen [::]:80;

    # IMPORTANTE: Substitua pelo seu domínio real
    server_name secretaria.seudominio.com;

    # Logs específicos para esta aplicação
    access_log /var/log/nginx/secretaria-online-access.log;
    error_log /var/log/nginx/secretaria-online-error.log;

    # Tamanho máximo de upload (deve coincidir com o backend)
    client_max_body_size 10M;

    # Root do frontend (arquivos estáticos buildados pelo Vite)
    root /opt/secretaria-online/frontend/dist;
    index index.html;

    # ==============================================================================
    # BACKEND API (Proxy Reverso para Node.js)
    # ==============================================================================

    location /api/ {
        # Proxy para o backend Node.js rodando na porta 3000
        proxy_pass http://127.0.0.1:3000;

        # Headers necessários para proxy reverso
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Não cachear respostas da API
        proxy_cache_bypass $http_upgrade;

        # Timeouts (ajuste conforme necessário)
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # ==============================================================================
    # FRONTEND (SPA - Single Page Application)
    # ==============================================================================

    # Servir arquivos estáticos diretamente
    location / {
        # Tentar servir arquivo, depois diretório, senão retorna index.html
        # Isso é necessário para SPAs com client-side routing (React Router)
        try_files $uri $uri/ /index.html;

        # Cache para assets estáticos (JS, CSS, imagens)
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }

    # ==============================================================================
    # SECURITY HEADERS
    # ==============================================================================

    # Prevenir clickjacking
    add_header X-Frame-Options "SAMEORIGIN" always;

    # Prevenir MIME type sniffing
    add_header X-Content-Type-Options "nosniff" always;

    # XSS Protection (navegadores antigos)
    add_header X-XSS-Protection "1; mode=block" always;

    # Referrer Policy
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Content Security Policy (ajuste conforme necessário)
    # Nota: Descomente e ajuste após testar a aplicação
    # add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';" always;

    # ==============================================================================
    # GZIP COMPRESSION
    # ==============================================================================

    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss application/rss+xml font/truetype font/opentype application/vnd.ms-fontobject image/svg+xml;

    # ==============================================================================
    # OUTRAS CONFIGURAÇÕES
    # ==============================================================================

    # Bloquear acesso a arquivos sensíveis
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Bloquear acesso a arquivos de configuração
    location ~ \.(env|json|config\.js)$ {
        deny all;
        access_log off;
        log_not_found off;
    }
}

