# ==============================================================================
# CONFIGURAÇÕES DO SERVIDOR
# ==============================================================================

NODE_ENV=production
PORT=3000
BASE_URL=https://seudominio.com

# ==============================================================================
# CONFIGURAÇÕES DO BANCO DE DADOS (MariaDB)
# ==============================================================================

DB_HOST=localhost
DB_PORT=3306
DB_NAME=secretaria_online
DB_USER=secretaria_user
DB_PASSWORD=SUA_SENHA_SEGURA_AQUI

DB_POOL_MAX=25
DB_POOL_MIN=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000
DB_TIMEZONE=-03:00

# ==============================================================================
# CONFIGURAÇÕES DE AUTENTICAÇÃO (JWT)
# ==============================================================================

# IMPORTANTE: Gere uma chave secreta complexa com:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=GERE_UMA_CHAVE_SECRETA_COMPLEXA_AQUI

JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ==============================================================================
# CONFIGURAÇÕES DE EMAIL (SMTP)
# ==============================================================================

# Configure com seu provedor de email
SMTP_HOST=smtp.seudominio.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@seudominio.com
SMTP_PASS=SUA_SENHA_EMAIL_AQUI
SMTP_FROM="Secretaria Online <noreply@seudominio.com>"

# ==============================================================================
# CONFIGURAÇÕES DE UPLOAD DE ARQUIVOS
# ==============================================================================

MAX_FILE_SIZE=10485760
UPLOAD_PATH=/opt/secretaria-online/backend/uploads
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/jpg,image/png

# ==============================================================================
# CONFIGURAÇÕES DE LOGS
# ==============================================================================

LOG_LEVEL=info
LOG_TO_FILE=true
LOG_PATH=/opt/secretaria-online/backend/logs

# ==============================================================================
# CONFIGURAÇÕES DE SEGURANÇA
# ==============================================================================

RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW=15

# IMPORTANTE: Configure com o domínio correto do frontend
# Se frontend e backend estiverem no mesmo domínio, use https://seudominio.com
CORS_ORIGIN=https://seudominio.com

# ==============================================================================
# CONFIGURAÇÕES DE GERAÇÃO DE PDF
# ==============================================================================

PDF_LIBRARY=pdfkit
CONTRACTS_TEMPLATE_PATH=/opt/secretaria-online/backend/templates/contracts

# ==============================================================================
# CONFIGURAÇÕES DE CRON JOBS
# ==============================================================================

ENABLE_TEMP_CLEANUP=true
TEMP_FILES_RETENTION_DAYS=7
ENABLE_CONTRACT_RENEWAL=true

# ==============================================================================
# CONFIGURAÇÕES ADICIONAIS
# ==============================================================================

API_PREFIX=/api/v1
REQUEST_TIMEOUT=30000
MAINTENANCE_MODE=false
